<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.wave.trace.wave_trace.controllers.InsertSceneController"
            prefHeight="400.0" prefWidth="600.0">

    <GridPane AnchorPane.rightAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="10" alignment="CENTER"  hgap="10" vgap="10">
        <Label alignment="CENTER" maxWidth="Infinity" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" text = "Введите размер сетки"/>
        <TextField fx:id="firstTextField" GridPane.columnIndex="0"
                   GridPane.rowIndex="1"/>
        <TextField fx:id="secondTextField" GridPane.columnIndex="1"
        GridPane.rowIndex="1"/>

        <Label alignment="CENTER" maxWidth="Infinity" GridPane.rowIndex="2" GridPane.columnIndex="0" text = "Высота"/>
        <Label alignment="CENTER" maxWidth="Infinity" GridPane.rowIndex="2" GridPane.columnIndex="1" text = "Ширина"/>

        <Button maxWidth="Infinity" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2" text="Ввод" onAction="#onInputButtonClick"/>
    </GridPane>


</AnchorPane>
